%h1 Exercise Log
%h2= @workout.date
#workout
  %h3 Workout
  %p= @workout.workout
  %h3 Mood
  %p= @workout.mood
  %h3 Length
  %p= @workout.length
#exercises
  %h2 Exercises
  = render @workout.exercises
  %h2 Add an exercise
  = render 'exercises/form'

= link_to 'Back', root_path
|
= link_to 'Edit', edit_workout_path(@workout)
|
= link_to 'Delete', workout_path(@workout), method: :delete, data: { confirm: "Are you sure?" }
